@model SampleApplications.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row justify-content-center">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="loginscreen d-flex flex-column align-self-center justify-content-center">
                        <div class="row ">
                            <h3 class="text-center">Login</h3>
                        </div>
                        <div class="row">
                            <div class="form-group col-12">
                                @Html.LabelFor(x=>x.UserName)
                                @Html.TextBoxFor(x=>x.UserName,"",new {@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.UserName,"",new {@class="text-danger"})
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12">
                                @Html.LabelFor(x=>x.Password)
                                @Html.PasswordFor(x=>x.Password,new {@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.Password,"",new {@class="text-danger"})
                            </div>
                        </div>

                        <div class="row">
                            
                                <button type="submit" class="btn btn-primary my-1">Login</button>
                                <a href="@Url.Action("Register","Account")" role="button" class="btn btn-success">New User Register now</a>
                            
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
